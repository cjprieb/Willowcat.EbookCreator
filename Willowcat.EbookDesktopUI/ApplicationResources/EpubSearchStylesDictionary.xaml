<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.io/icons/">
    <Style TargetType="ListView" x:Key="EpubSearchListViewStyle">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    <Style TargetType="ListViewItem" x:Key="EpubSearchItemViewStyle">
        <Setter Property="Background" Value="AliceBlue" />
        <Setter Property="BorderBrush" Value="DarkSlateGray" />
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0 0 0 4" />
        <Setter Property="Padding" Value="4" />
        <!--<Setter Property="Focusable" Value="False"/>-->
    </Style>
    <Style TargetType="TextBox" x:Key="EpubSearchTitleStyle">
        <Setter Property="Margin" Value="0 0 4 0"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style TargetType="TextBlock" x:Key="EpubSearchWorkUrlStyle">
        <Setter Property="Margin" Value="0 5 4 0"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="EpubSearchStatStyle">
        <Setter Property="Margin" Value="0 0 4 0"/>
    </Style>
    <Style TargetType="ContentControl" x:Key="EpubRatingDisplayStyle">
        <Setter Property="Height" Value="16" />
        <Setter Property="Width" Value="16" />
    </Style>
    <Style TargetType="Border" x:Key="EpubTagSection">
        <Setter Property="Margin" Value="0 4 0 0"/>
        <Setter Property="Padding" Value="0 4 0 0"/>
        <Setter Property="BorderBrush" Value="DarkSlateGray" />
        <Setter Property="BorderThickness" Value="0 1 0 0"/>
    </Style>
    <Style TargetType="Label" x:Key="EpubLabelStyle">
        <Setter Property="Margin" Value="0 0 0 0"/>
        <Setter Property="Padding" Value="0 0 0 0"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style TargetType="Button" x:Key="EpubTagStyle">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="0 0 4 0"/>
        <Setter Property="Padding" Value="2 0"/>
        <Setter Property="Background" Value="Lavender"/>
        <Setter Property="BorderBrush" Value="SlateBlue" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
    <Style TargetType="Button" x:Key="EpubProcessTagStyle" BasedOn="{StaticResource EpubTagStyle}">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="BorderBrush" Value="DimGray" />
    </Style>
    <Style TargetType="Button" x:Key="EpubIconButtonStyle">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="4 0"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="EpubDetailTitleStyle">
        <Setter Property="Margin" Value="0 0 4 0"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <!--<Setter Property="IsReadOnly" Value="True" />-->
        <Setter Property="Background" Value="Transparent" />
    </Style>
</ResourceDictionary>