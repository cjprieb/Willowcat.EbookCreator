<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Willowcat.EbookDesktopUI.ApplicationResources.TagTemplates">
    <DataTemplate x:Key="RemoveTagMenuItemTemplate">
        <MenuItem 
                Command="{Binding MenuCommand}"
                CommandParameter="{Binding TagType}">
            <MenuItem.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Remove tag '"/>
                    <TextBlock Text="{Binding TagName}"/>
                    <TextBlock Text="'"/>
                </StackPanel>
            </MenuItem.Header>
        </MenuItem>
    </DataTemplate>    
</ResourceDictionary>